
@{
    ViewBag.Title = "AddAdvertisement";
    Layout = "~/Views/_layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Reklam Ekle</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm("blogEkle", "Admin", FormMethod.Post, htmlAttributes: new { id = "", @class = "", enctype = "multipart/form-data" }))
    {
        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Reklam Adı</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="blogBaslik" placeholder="">
            </div>

            <div class="form-group">
                <label for="exampleInputFile">Reklam Resmi</label>
                <input type="file" id="exampleInputFile" name="blogResimYol">
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    }
</div>

