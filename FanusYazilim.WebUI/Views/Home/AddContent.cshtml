
@{
    ViewBag.Title = "AddContent";
    Layout = "~/Views/_layout.cshtml";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">İçerik Ekle</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    @using (Html.BeginForm("AddContent", "Home", FormMethod.Post, htmlAttributes: new { id = "", @class = "", enctype = "multipart/form-data" }))
    {
        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">İçerik</label>
                <input type="text" class="form-control" id="exampleInputEmail1" name="Content" placeholder="">
            </div>
            <input type="hidden"  name="CategoryID" value="@ViewBag.CategoryID">
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    }
</div>
