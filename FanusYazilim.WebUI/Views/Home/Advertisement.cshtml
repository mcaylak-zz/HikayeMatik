@using FanusYazilim.Entities;
@model IEnumerable<Advertisement>
@{
    ViewBag.Title = "Advertisement";
    Layout = "~/Views/_layout.cshtml";
}

<a href=@Url.Action("AddAdvertisement","Home")><button type="button" class="btn btn-block btn-primary btn-flat">Reklam Ekle</button></a>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Blog Listele</h3>
                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>Reklam Sahibi</th>

                    </tr>

                    <tr>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.Owner</td>
                            <td><a href="@Url.Action("DeleteAdvertisement", "Home", new { AdvertisementID = item.AdvertisementID})"><button type="button" class="btn btn-block btn-danger btn-flat">Sil</button></a></td>
                        </tr>

                        }
                    </tr>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>

