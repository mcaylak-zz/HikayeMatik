@using FanusYazilim.Entities;
@model IEnumerable<Category>
@{
    ViewBag.Title = "Content";
    Layout = "~/Views/_layout.cshtml";
}

<a href=@Url.Action("Contents","Home")><button type="button" class="btn btn-block btn-primary btn-flat">Ekli İçerikleri Gör</button></a>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Blog Listele</h3>
                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>

                        <th>Kategori Adı</th>
                        <th>Ekli İçerik Sayısı</th>
                    </tr>

                    @foreach (var item in Model)
                    {

                    <tr>
                        <td>@item.Name</td>
                        @if (item.Contents != null)
                        {
                            <td>@item.Contents.Count</td>
                        }
                        else
                        {
                            <td>0</td>
                        }
                        
                        <td><a href="@Url.Action("AddContent", "Home", new { CategoryID = item.CategoryID})"><button type="button" class="btn btn-block btn-primary btn-flat">İçerik Ekle</button></a></td>
                    </tr>

                    }
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>